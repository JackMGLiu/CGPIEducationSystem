    <script>
        layui.use(['table', 'laydate'],
            function () {
                var table = layui.table,
                    $ = layui.jquery,
                    layer = layui.layer,
                    form = layui.form,
                    laytpl = layui.laytpl,
                    laydate = layui.laydate;

                form.verify({
                    accisexist: function (value, item) {
                        var status, msg = '';
                        $.ajax({
                            url: "/user/getaccount",
                            type: "post",
                            async: false,
                            data: {
                                account: value
                            },
                            dataType: "json",
                            success: function (data) {
                                status = data.state;
                                msg = data.message;
                            }
                        });
                        if (status != '1') {
                            return msg;
                        } else if (status == '1') {
                            return false;
                        } else {
                            return '未知错误，请刷新重试！';
                        }
                    },
                    mobileisexist: function (value, item) {
                        var status, msg = '';
                        $.ajax({
                            url: "/user/getmobile",
                            type: "post",
                            async: false,
                            data: {
                                mobile: value
                            },
                            dataType: "json",
                            success: function (data) {
                                status = data.state;
                                msg = data.message;
                            }
                        });
                        if (status != '1') {
                            return msg;
                        } else if (status == '1') {
                            return false;
                        } else {
                            return '未知错误，请刷新重试！';
                        }
                    },
                });


                var tableIns = table.render({
                    elem: '#users',
                    height: 'full-50', //容器高度
                    url: '/demo/getusers',
                    page: true,
                    id: 'tbusers',
                    limit: 20,
                    cols: [
                        [
                            {
                                checkbox: true,
                                fixed: true
                            }, {
                                field: 'Id',
                                title: 'ID',
                                width: 50
                            }, {
                                field: 'Account',
                                title: '用户名',
                                width: 110
                            },
                            {
                                field: 'EnCode',
                                title: '工号',
                                width: 110
                            },
                            {
                                field: 'RealName',
                                title: '姓名',
                                width: 120
                            },
                            {
                                field: 'Gender',
                                title: '性别',
                                templet: '#gendertpl',
                                width: 100
                            }, {
                                field: 'MobilePhone',
                                title: '手机号码',
                                width: 150
                            }, {
                                field: 'CreateTime',
                                title: '添加时间',
                                width: 200,
                                sort: true
                            }, {
                                field: 'CreateUser',
                                title: '操作人',
                                width: 150
                                //sort: true
                            }, {
                                fixed: 'right',
                                title: '操作',
                                width: 200,
                                align: 'center',
                                toolbar: '#rowtools'
                            }
                        ]
                    ],
                    done: function (res, curr, count) {
                        //console.info(res.data);
                        //如果是异步请求数据方式，res即为你接口返回的信息。
                        //如果是直接赋值的方式，res即为：{data: [], count: 99} data为当前页数据、count为数据总长度
                        // console.log(res);
                        // //得到当前页码
                        // console.log(curr);
                        // //得到数据总量
                        // console.log(count);
                    },
                    loading: true,
                    method: 'post'
                });

                form.render(null, 'kit-search-form');
                $('#kit-search-more').on('click',
                    function () {
                        laydate.render({
                            elem: '#birth'
                        });
                        $('.kit-search-mored').toggle();
                    });


                var editIndex;
                //提交
                form.on('submit(formEdit)',
                    function (form) {
                        //console.log(data);
                        //layer.msg('formEdit');
                        //editIndex && layer.close(editIndex); //关闭弹出层

                        $.formSubmit({
                            winindex: editIndex,
                            showMsg: true,
                            url: "/demo/saveuser",
                            data: form.field
                        });

                        tableIns.reload();
                        return false;
                    });

                //搜索表单提交
                $('#btnsearch').on('click',
                    function () {
                        var keyword = $('#keyword').val();
                        //带条件查询
                        tableIns.reload({
                            where: { 'keyword': keyword }
                        });
                        return false;
                    });

                form.on('submit(moresearch)',
                    function (data) {
                        console.log(data.field);
                        layer.msg(JSON.stringify(data.field));
                        //带条件查询
                        tableIns.reload({
                            where: data.field
                        });
                        return false;
                    });

                //工具条操作
                table.on('tool(users)',
                    function (obj) { //注：tool是工具条事件名，users是table原始容器的属性 lay-filter="对应的值"
                        var data = obj.data; //获得当前行数据
                        var layEvent = obj.event; //获得 lay-event 对应的值
                        var tr = obj.tr; //获得当前行 tr 的DOM对象

                        if (layEvent === 'detail') { //查看
                            layer.msg(JSON.stringify(data));
                            //do somehing
                        } else if (layEvent === 'del') { //删除
                            layer.confirm('确定要删除当前数据吗？',
                                function (index) {
                                    obj.del(); //删除对应行（tr）的DOM结构
                                    layer.close(index);
                                    //向服务端发送删除指令
                                });
                        } else if (layEvent === 'edit') { //编辑
                            var d = {
                                user: data,
                                Nations: staticData.nations
                            };
                            //do something
                            laytpl($('#edit-tpl').html()).render(d,
                                function (html) {
                                    layer.open({
                                        type: 1,
                                        title: '编辑用户信息',
                                        content: html,
                                        area: ['80%', '85%'],
                                        btn: ['提交', '重置', '取消'],
                                        yes: function (index, layero) {
                                            editIndex = index;
                                            $('form[lay-filter="form-edit"]').find('button[lay-submit]').click();
                                        },
                                        btn2: function (index, layero) {
                                            $('form[lay-filter="form-edit"]').find('button[type="reset"]').click();
                                            return false;
                                        },
                                        success: function () {
                                            $('#Account').removeAttr('lay-verify').attr('disabled', true).addClass('layui-disabled');
                                            $('#MobilePhone').removeAttr('lay-verify').attr('disabled', true).addClass('layui-disabled');

                                            laydate.render({
                                                elem: '#Birthday'
                                            });
                                            form.render(null, 'form-edit');
                                        }
                                    });
                                });
                            //同步更新缓存对应的值
                            // obj.update({
                            //     username: '123',
                            //     title: 'xxx'
                            // });
                        }
                    });

                $('.kit-search-btns').children('a').off('click').on('click',
                    function () {
                        var $that = $(this),
                            action = $that.data('action');
                        switch (action) {
                            case 'add':
                                var d = {
                                    user: {
                                        Id: 0,
                                        Account: '',
                                        RealName: '',
                                        MobilePhone: '',
                                        Gender: null,
                                        Nation: -1,
                                        CardId: '',
                                        Birthday: '',
                                        Address: '',
                                        Remark: ''
                                    },
                                    Nations: staticData.nations
                                };
                                //渲染
                                laytpl($('#edit-tpl').html()).render(d,
                                    function (html) {
                                        layer.open({
                                            type: 1,
                                            title: '新增用户信息',
                                            content: html,
                                            area: ['80%', '85%'],
                                            btn: ['提交', '重置', '取消'],
                                            yes: function (index, layero) {
                                                editIndex = index;
                                                $('form[lay-filter="form-edit"]').find('button[lay-submit]').click();
                                            },
                                            btn2: function (index, layero) {
                                                $('form[lay-filter="form-edit"]').find('button[type="reset"]').click();
                                                return false;
                                            },
                                            success: function () {


                                                laydate.render({
                                                    elem: '#Birthday'
                                                });
                                                form.render(null, 'form-edit');
                                            }
                                        });
                                    });
                                break;
                        }
                    });
            });

        var staticData = {
            citys: [
                {
                    id: 0,
                    name: '北京'
                }, {
                    id: 1,
                    name: '广州'
                }, {
                    id: 2,
                    name: '深圳'
                }, {
                    id: 3,
                    name: '杭州'
                }
            ],
            classifies: [
                {
                    id: 0,
                    name: '词人'
                }, {
                    id: 1,
                    name: '诗人'
                }, {
                    id: 2,
                    name: '作家'
                }, {
                    id: 3,
                    name: '酱油'
                }
            ],
            nations: [
                {
                    id: 0,
                    name: '汉族'
                },
                {
                    id: 2,
                    name: '回族'
                },
                {
                    id: 3,
                    name: '壮族'
                },
                {
                    id: 4,
                    name: '蒙古族'
                }
            ]
        };
    </script>
}
