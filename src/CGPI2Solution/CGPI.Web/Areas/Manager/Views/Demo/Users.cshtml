                                                            // console.log('111111', initValue);
                                                            // thatInput && initValue && thatInput.val(initValue);
                                                        }
                                                        thatInput = null;
                                                    };

                                                    var showDown = function() {
                                                            $selectDiv.addClass(CLASS + 'ed');
                                                            $dds.removeClass(HIDE);
                                                        },
                                                        hideDown = function() {
                                                            $selectDiv.removeClass(CLASS + 'ed');
                                                            $input.blur();

                                                            notOption($input.val(),
                                                                function(none) {
                                                                    if (none) {
                                                                        // initValue = $dl.find('.' + THIS).html();
                                                                        initValue = $el.data('text').join(',') + ',';
                                                                        console.log('22222', initValue);
                                                                        $input && $input.val(initValue);
                                                                    }
                                                                });
                                                        };

                                                    $title.off('click');
                                                    //点击标题区域
                                                    $title.on('click',
                                                        function(e) {
                                                            // $selectDiv.hasClass(CLASS + 'ed') ? (
                                                            //     hideDown()
                                                            // ) : (
                                                            hide(e, true),
                                                                showDown();
                                                            // );
                                                            $dl.find('.' + NONE).remove();
                                                        });

                                                    $input.on('keyup', search).on('blur',
                                                        function(e) {
                                                            thatInput = $input;
                                                            // initValue = $el.data('text').join(',');
                                                            initValue = $dl.find('.' + THIS).html();
                                                            setTimeout(function() {

                                                                    notOption($input.val().split(',').pop(),
                                                                        function(none) {
                                                                            if (none && !initValue) {
                                                                                console.log('没有只');
                                                                                // $input.val('');
                                                                            }
                                                                        },
                                                                        'blur');
                                                                },
                                                                200);
                                                        });
                                                });
                                            }
                                        });
                                    });
                                break;
                        }
                    });
