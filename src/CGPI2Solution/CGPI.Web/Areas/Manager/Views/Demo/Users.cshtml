                                                        var value = this.value.split(',').pop(),
                                                            keyCode = e.keyCode;
                                                        //9   tab
                                                        //13 enter
                                                        //37 left arrow
                                                        //38 up arrow
                                                        //39 right
                                                        //40 down
                                                        if (keyCode === 9 ||
                                                            keyCode === 13 ||
                                                            keyCode === 37 ||
                                                            keyCode === 38 ||
                                                            keyCode === 39 ||
                                                            keyCode === 40
                                                        ) {
                                                            return false;
                                                        }
                                                        //8 backspace
                                                        if (keyCode === 8) {
                                                            console.log('回退', value);
                                                            if (this.value) {
                                                                var arr = this.value.split(',');
                                                                var pop = arr.pop();

                                                                $.each($dds,
                                                                    function(index) {
                                                                        if ($(this).text() == pop) {
                                                                            $(this).removeClass(THIS);
                                                                            // $el.data('text')
                                                                        }
                                                                    });
                                                                this.value = arr.join(',') + ',';
                                                            }

                                                            // value.split(',').pop();
                                                            // console.log(value);
                                                            // this.value = value;
                                                            return false;
                                                        }

                                                        notOption(value,
