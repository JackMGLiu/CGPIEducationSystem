<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewData["Title"] - CGPI教务管理系统</title>
    <link rel="stylesheet" href="~/framework/layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" media="all" />
    <link rel="stylesheet" href="~/framework/css/app.css" media="all" />
    <link rel="stylesheet" href="~/framework/css/themes/default.css" media="all" id="skin" kit-skin />
    <link href="~/framework/select2/css/select2.css" rel="stylesheet" />
    @RenderSection("managerstyles", required: false)
</head>
<body class="kit-theme">
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/framework/layui/layui.js"></script>
    <script src="~/framework/select2/js/select2.js"></script>
    <script src="~/framework/select2/js/zh-CN.js"></script>
    <script src="~/framework/js/global.js"></script>
    <script>
        var message;
        layui.config({
            base: '/framework/js/'
        }).use(['app', 'message'],
            function () {
                var app = layui.app,
                    $ = layui.jquery,
                    layer = layui.layer;
                //将message设置为全局以便子页面调用
                message = layui.message;
            });
    </script>
    @RenderSection("managerscripts", required: false)
</body>

</html>
